<h1 align="center">All Posts</h1>

<html>
<head>
<style>
table, th, td {
  border: 1px solid black;
}
</style>
</head>

<body>
<table align="center">
	<thead>
		<tr>
			<th style="width:30%">Title</th>
			<th style="width:30%">Written by</th>
			<th style="width:30%">Time</th>
			<th style="width:30%">Likes</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= link_to post.title, post %></td>
				<td><%= post.user.name %></td>
				<td><%= post.created_at.strftime("%B, %d, %Y")%></td>
				<td><%= post.likes.count %></td>
			</tr>
		<% end %>
	</tbody>
</table><br>

</body>