<%= form_for([@post,@post.comments.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <br>
  <p>
    <% if !user_signed_in? %>
      <button><%= link_to "Create Comment", new_user_registration_path %></button>
    <% else %>
      <%= f.submit %>
    <% end %>
  </p>
<% end %>
